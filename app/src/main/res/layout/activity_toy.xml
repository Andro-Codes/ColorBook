<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_l1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:background="@drawable/ic_draw_bottom"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                >

                <LinearLayout
                    android:id="@+id/leftTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/pen"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/menu1pencil" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/mPaint"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/menu3bucket" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/eraser"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/menu4eraser" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/stickers"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/but_sticker" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/zoom"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/zoom_in" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/save"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/menu5save" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/newPage"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/menu7close" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/Textsize2"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/sound"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/but_sound" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/Textsize2">

                                <ImageView
                                    android:id="@+id/back"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/but_7" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/drawing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/zoomFrame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <pavishka.coloring.book.Activities.Screens.ScreenSlatPen
                                android:id="@+id/draw"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/spark"
                                android:visibility="invisible" />
                        </FrameLayout>
                    </FrameLayout>

                    <androidx.drawerlayout.widget.DrawerLayout
                        android:id="@+id/dr_layout_brush"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/drawer_brush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/tab"
                            android:orientation="vertical"
                            android:padding="@dimen/Textsize5"
                            android:rotation="180">

                            <ImageView
                                android:id="@+id/ivBrushSize3"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/bbig_dot" />

                            <ImageView
                                android:id="@+id/ivBrushSize2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/mmedium_dot" />

                            <ImageView
                                android:id="@+id/ivBrushSize1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/ssmall_dot" />
                        </LinearLayout>
                    </androidx.drawerlayout.widget.DrawerLayout>

                    <androidx.drawerlayout.widget.DrawerLayout
                        android:id="@+id/dr_layout_color"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/drawer_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|left"
                            android:background="@drawable/tab"
                            android:orientation="vertical"
                            android:padding="@dimen/Textsize5"
                            android:scaleX="-1">

                            <ImageView
                                android:id="@+id/ivColorSize1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/c1_red1" />

                            <ImageView
                                android:id="@+id/ivColorSize2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/pat_2" />

                            <ImageView
                                android:id="@+id/ivColorSize3"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:src="@drawable/git_9" />

                            <ImageView
                                android:id="@+id/ivColorSize4"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/Textsize5"
                                android:layout_weight="1"
                                android:scaleX="-1"
                                android:src="@drawable/txt16" />
                        </LinearLayout>
                    </androidx.drawerlayout.widget.DrawerLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/seekbar_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <SeekBar
                        android:id="@+id/seekbar_hor"
                        android:layout_width="@dimen/Textsize220"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:progressDrawable="@drawable/bg_seekbar"
                        android:thumb="@drawable/scroll_thumb" />

                    <pavishka.coloring.book.Activities.OtherScreens.ScreenSearchSeekBar
                        android:id="@+id/seekbar_var"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/Textsize220"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:progressDrawable="@drawable/bg_seekbar"
                        android:rotation="180"
                        android:thumb="@drawable/scroll_thumb" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lay_popUpPicker"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_popup"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.65"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintWidth_percent="0.8">

                    <LinearLayout
                        android:id="@+id/picker_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.3"
                        app:layout_constraintWidth_percent="0.8" />

                    <View
                        android:id="@+id/layer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.35"
                        app:layout_constraintWidth_percent="0.8" />

                    <LinearLayout
                        android:id="@+id/col_history"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.9"
                        app:layout_constraintWidth_percent="0.8">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/Textsize3a"
                            android:layout_weight="1"
                            android:src="@drawable/square_border" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/Textsize3a"
                            android:layout_weight="1"
                            android:src="@drawable/square_border" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/Textsize3a"
                            android:layout_weight="1"
                            android:src="@drawable/square_border" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/Textsize3a"
                            android:layout_weight="1"
                            android:src="@drawable/square_border" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/Textsize3a"
                            android:layout_weight="1"
                            android:src="@drawable/square_border" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/close_picker"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/back_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.02"
                        app:layout_constraintWidth_percent="0.1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/horizontal_recycler_view_frameview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:background="@drawable/ic_draw_top"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/mainContent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/choose_colortype"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/Textsize5"
                                    android:src="@drawable/but_menu" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/Textsize5"
                                android:clickable="false"
                                android:src="@drawable/but_menu"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/horizontal_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:divider="@null"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_sticker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent_black"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/Textsize12"
                android:layout_marginTop="@dimen/ATextSize"
                android:layout_marginRight="@dimen/Textsize12"
                android:layout_marginBottom="@dimen/ATextSize"
                android:background="@drawable/quit_bg_1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/Textsize7">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/st_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Textsize10" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/adViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center" />
</LinearLayout>
